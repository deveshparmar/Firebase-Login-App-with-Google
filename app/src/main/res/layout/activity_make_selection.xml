<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotPasswordActivity"
    android:background="@color/white"
    android:padding="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            android:padding="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Make\nSelection"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="40sp"
            android:fontFamily="@font/muli_black"
            android:layout_marginTop="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select the way we should use to reset your password?"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:fontFamily="@font/muli_extralight"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="50dp"
            android:background="#f5f5f5"
            android:padding="10dp">

            <ImageView
                android:id="@+id/mobile_ic"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_mob"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"/>

            <TextView
                android:id="@+id/mob_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="via SMS:"
                android:textSize="18sp"
                android:fontFamily="@font/muli_extralight"
                android:layout_toRightOf="@id/mobile_ic"
                android:layout_marginTop="35dp"/>
            <TextView
                android:id="@+id/mob_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="An OTP will be sent to your phoneNo"
                android:textSize="20sp"
                android:fontFamily="@font/muli_extralight"
                android:layout_toRightOf="@id/mobile_ic"
                android:layout_below="@id/mob_title"
                android:textColor="@color/black"
                android:layout_marginTop="35dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="20dp"
            android:background="#f5f5f5"
            android:padding="10dp">

            <ImageView
                android:id="@+id/mail_ic"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_mail_fg"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"/>

            <TextView
                android:id="@+id/mail_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="via Mail:"
                android:textSize="18sp"
                android:fontFamily="@font/muli_extralight"
                android:layout_toRightOf="@id/mail_ic"
                android:layout_marginTop="35dp"/>
            <TextView
                android:id="@+id/mail_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="An Email will be sent to your email id"
                android:textSize="20sp"
                android:fontFamily="@font/muli_extralight"
                android:layout_toRightOf="@id/mail_ic"
                android:layout_below="@id/mail_title"
                android:textColor="@color/black"
                android:layout_marginTop="35dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000" />


        </RelativeLayout>




    </LinearLayout>

</ScrollView>